page {
    height: 100%;
}

.pre {
    border-bottom: 3rpx solid #ffffff;
    margin-left: 6%;
    margin-right: 6%;
}

.preTip {
    margin-left: 6%;
    margin-right: 6%;
    height: 80rpx;
    font-size: 45rpx;
    /* text-align: center; */
    margin-left: 20%;
    line-height: 80rpx;
    color: black;
}

.preTip image {
    /* background-color: greenyellow; */
    height: 25px;
    float: right;
}

.pastApplication {
    margin-left: 6%;
    margin-right: 6%;
    width: 88%;
    display: flex;
    position: relative;
    box-shadow: 6rpx 10rpx 20rpx #9bb1c9;
    margin-top: 34rpx;
    border-radius: 20rpx;
    z-index: 0;
}

.applicationTime {
    font-size: 30rpx;
    color: #A0A9BD;
}

.detailApplication {
    /* font-family: Regular; */
    position: relative;
    padding-top: 30rpx;
    padding-left: 40rpx;
    /* margin: 10rpx; */
    width: 70%;
    flex: 1;
}

.underApplication {
    width: 140rpx;
    height: 65rpx;
    background-color: #3a95e4;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.approvedApplication {
    width: 140rpx;
    height: 65rpx;
    background-color: #3cb65a;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.disapprove {
    width: 140rpx;
    height: 65rpx;
    background-color: #db434b;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.reviewText {
    position: relative;
    text-align: center;
    line-height: 65rpx;
    font-size: 38rpx;
    color: white;
    font-family: Regular;

}

.circle {
    float: left;
    margin-top: 20rpx;
    margin-right: 10rpx;
    width: 25rpx;
    height: 25rpx;
    border-radius: 50px;
}

.pastApplication image {
    /* width: 30px;
    height: 30px; */
    position: absolute;
}

.stateBox {
    width: 30%;
}

.stateContent {
    float: right;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

.img000 {
    position: absolute;
    display: flex;
    height: 100%;
    bottom: 0;
    width: 100%;
    z-index: 1;
    opacity: 0.3;
}

.img00 {
    position: absolute;
    display: flex;
    width: 100%;
    z-index: 0;
    opacity: 0.3;
}

.pass {
    width: 58rpx;
    height: 58rpx;
    right: 2%;
    bottom: 0;
    z-index: 2;
}

.back {
    width: 60rpx;
    height: 60rpx;
    bottom: 0;
    right: 15%;
    z-index: 2;
}

/* 盒子往下撑开 */
.box {
    height: 12%;
}

.font {
    font-family: '阿里巴巴普惠体 2.0 55 Regular';

}