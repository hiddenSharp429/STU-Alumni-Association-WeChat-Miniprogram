page {
    background-color: #B0C9E5;
    width: 100%;
}

.space {
    padding-left: 32rpx;
    margin-top: 40rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    width: 100%;
    display: flex;
}

.popMsg {
    background-color: #ffffff;
    height: 100%;
    width: 690rpx;
    border-radius: 20rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    margin: 35rpx;
    position: relative;
}

/* 必填项 */
.subtitle {
    margin-top: 0rpx;
    font-size: 36rpx;
    font-weight: 400;
}

.subtitle::after {
    content: '*';
    color: red;
}

.popMsgIntput {
    font-size: 36rpx;
    margin-left: 40rpx;
    width: 500rpx;
    color: #6f737a;
    float: right;
}

.popMsgIntput1 {
    width: 400rpx;
    font-size: 36rpx;
    float: right;
    margin-left: 40rpx;
    color: #6f737a;
}

.popMsgIntput2 {
    background-color: transparent;
    width: 500rpx;
    font-size: 36rpx;
    float: right;
    color: #6f737a;
}

.popMsgBtn {
    height: 30px;
}

.text0 {
    opacity: 0;
}

.text1 {
    position: absolute;
    left: 30%;
}

.text2 {
    position: absolute;
    right: 30%;
}

.timeborder {
    font-size: 36rpx;
    margin-left: 40rpx;
    width: 300rpx;
    float: right;
    color: #6f737a;
}

.timeborderPlan {
    width: 63%;
    float: right;
    height: 20rpx;
    /* background-color: transparent; */
    /* color: transparent; */
    position: relative;
}

.plantime {
    color: rgb(0, 0, 0);
    font-weight: bolder;
    /* background-color: transparent; */
}

.plantimevalue {
    color: rgb(207, 53, 33);
}

.timeborderPlan .rootplantime {
    background-color: transparent;
    color: rgb(0, 0, 0);
    float: right;
    position: absolute;
    right: 28rpx;
    font-size: 28rpx;
    bottom: -48rpx;
}

.img {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    margin-top: 0rpx;
    right: 30rpx;
}
.input0 {
    position: absolute;
    padding: 15rpx;
    padding-top: 10rpx;
    right: 0;
    margin: 0rpx 100rpx -0rpx 0rpx;
    color: #6f737a;
    width: 45%;
}