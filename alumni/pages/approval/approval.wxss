/* pages/approval/approval.wxss */
page {
    height: 100%;
}

.pre {
    border-bottom: 3rpx solid #ffffff;
    margin-left: 6%;
    margin-right: 6%;
}

.preTip {
    margin-left: 6%;
    margin-right: 6%;
    height: 80rpx;
    font-size: 45rpx;
    /* text-align: center; */
    margin-left: 20%;
    line-height: 80rpx;
    color: black;
}

.preTip image {
    /* background-color: greenyellow; */
    height: 25px;
    float: right;
}

.stateBox {
    width: 30%;
}

.stateContent {
    float: right;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

.img000 {
    position: absolute;
    display: flex;
    height: 100%;
    bottom: 0;
    width: 100%;
    z-index: 1;
    opacity: 0.3;
}

.img00 {
    position: absolute;
    display: flex;
    width: 100%;
    height: 155rpx;
    z-index: 0;
    opacity: 0.3;
}

.img {
    position: absolute;
    right: 10px;
    top: -60px;
    width: 30px;
    height: 10px;
    float: right;
    z-index: 4;
}

.back {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    background-color: rgba(0, 0, 0, 0.8);
    opacity: 0.5;
    overflow: hidden;
    display: flex;
}

.space {
    padding-left: 20px;
}

.popUps {
    font-size: 30rpx;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /* position: absolute; */
    margin-left: 1%;
    margin-top: -3%;
    height: 75%;
    width: 90%;
    transform: translate(5%, 5%);
    background: rgb(255, 255, 255);
    border-radius: 20rpx;
    z-index: 3;
    color: #777575;
}

.pastApplication {
    margin-left: 6%;
    margin-right: 6%;
    width: 88%;
    display: flex;
    position: relative;
    box-shadow: 6rpx 10rpx 20rpx #9bb1c9;
    margin-top: 34rpx;
    border-radius: 20rpx;
    z-index: 0;
}

.applicationTime {
    font-size: 30rpx;
    color: #A0A9BD;
}

.detailApplication {
    /* font-family: Regular; */
    position: relative;
    padding-top: 30rpx;
    padding-left: 40rpx;
    /* margin: 10rpx; */
    width: 70%;
    flex: 1;
}

.underApplication {
    width: 140rpx;
    height: 65rpx;
    background-color: #3a95e4;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.approvedApplication {
    width: 140rpx;
    height: 65rpx;
    background-color: #3cb65a;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.disapprove {
    width: 140rpx;
    height: 65rpx;
    background-color: #db434b;
    border-radius: 10px;
    box-shadow: 6rpx 10rpx 15rpx #ededed;
    float: right;
}

.reviewText {
    position: relative;
    text-align: center;
    line-height: 65rpx;
    font-size: 38rpx;
    color: white;
    font-family: Regular;
}

.circle {
    float: left;
    margin-top: 20rpx;
    margin-right: 10rpx;
    width: 25rpx;
    height: 25rpx;
    border-radius: 50px;
}

.img image {
    width: 30px;
}

.img23 {
    display: flex;
    align-items: center;
    border-top: 3rpx solid #dbe4ee;
    box-shadow: inset 0px 13px 10px -15px #dbe4ee;
    width: 100%;
}

.img1 {
    width: 50%;
    height: 100rpx;
    border-left: 3rpx solid #dbe4ee;
    border-right: 3rpx solid #dbe4ee;
    box-shadow: inset 0px 13px 10px -15px #dbe4ee;
}

.img1 image {
    height: 80rpx;
    width: 60rpx;
    padding-left: 150rpx;
}
.img2 {
    width: 50%;
    height: 100rpx;
    float: right;
    border-right: 3rpx solid #dbe4ee;
    border-left: 3rpx solid #dbe4ee;
    box-shadow: inset 0px 13px 10px -15px #dbe4ee;
}

.img2 image {
    height: 80rpx;
    z-index: 5;
    padding-left: 150rpx;
}

.text1 {
    line-height: 0px;
    padding-left: 150rpx;
}

/* 盒子往下撑开 */
.box {
    height: 12%;
}

.font {
    font-family: '阿里巴巴普惠体 2.0 55 Regular';
}